#!/bin/sh

set -a

# Add a pointer to the trampoline install directory.
NXT_TRAMPOLINE_PATH="/share/tr_m1_esir2/trampoline/"

# Add a pointer to the cross-compiler install directory.
NXT_GCC_PATH="/share/tr_m1_esir2/arm-elf/"
NXT_GCC_LIBGCC_VERSION="4.5.1"

# Add a pointer to the application skeleton directory.
NXT_TEMPLATE_PATH="/share/tr_m1_esir2/app_template/"

# Add gcc-arm to the path.
PATH="${PATH}:${NXT_GCC_INSTALL}/bin/"

# Add nexttool, goil, nxt_goil and nxt_send to the path.
PATH="${PATH}:/share/tr_m1_esir2/bin"

